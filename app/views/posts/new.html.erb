<%= form_for(@post,url: {controller: "posts", action: "create"}, method: "post") do%>

  <div class="form-group">
    <input type="text" class="form-control Title-style-n" name="title" placeholder="My Title" required>
  </div>
  
  <div class="rich-text-editor">
    <%= rich_text_area_tag :content %>
  </div>

  <div class="form-group try-flex">
    <select class="form-control publish-menu" name="status">
      <option>Publish</option>
      <option>Draft</option>
    </select>

    <select class="form-control publish-menu" name="privacy">
      <option>Publicly</option>
      <option>Privately</option>
    </select>
    
  </div>

  <button type="submit" class="btn btn-primary form-submit">Save</button>

<% end %>